body
  margin 0
  font-family PT mono


#backgroundImage
  background milk
  width 100vw
  height 100vh
  position fixed
  top 0
  left 0
  opacity .5
#menuOverEvents
  width 10vw
  min-width 100px
  height 10vh
  position absolute
  left 70vw
  top 5vh
  background white
  opacity .7
  line-height 10vh
  text-align center
  #closeButton
    background red
    width 10vw
    height 10vw
    float right
    font-size 8vw
    line-height 10vw
    text-align center
#addButton
  float right
  font-size 80px
  position fixed
  top 7vh
  right 5vw
  background palegreen
  padding 0 20px
  border-radius 50%
  z-index 100
#createButton
  float right
  font-size 20px
  position fixed
  top 7vh
  right 5vw
  background palegreen
  padding 0 20px
  border-radius 5%
#backButton
  float right
  font-size 20px
  position fixed
  top 12vh
  right 5vw
  background lightgray
  padding 0 20px
  border-radius 5%
#wall
  .postItem
    width 100%
    height 52vh
    background red
    display -webkit-flex
    -webkit-background-size cover
    text-align center
    vertical-align middle
    h1
      top 10%
      margin auto
      background red
      opacity .6
      &:hover
        opacity .92
    p
      margin-right 15px
      background white
      line-height 400%
      opacity .1
      &:hover
        opacity .6
    img
      width auto
      height auto
      margin auto
      max-height 100%
      max-width 100%
      display block
      opacity .6
      &:hover
        opacity .9
  width 60vw
  height 100vh
  background white
  left 20vw
  position absolute
  display webkit-flex
  @media screen and (max-width: 800px)
    width 80vw
    left 10vw
  @media screen and (max-width: 600px)
    width 100vw
    left 0px
#userView
  position fixed
  width 18vw
  height 18vw
  -webkit-transform scale(0.5)
  &:hover
      -webkit-transform scale(0.8)
  background url(ava.png) center no-repeat
  background-size contain
  text-align center
  color #333
  left 1vw
  top 1vw
  z-index 10
  border-radius 50%
  .contentUser
    background hotpink
    padding 20% 0
  @media screen and (max-width: 800px)
    width 20vw
    height 20vw
  @media screen and (max-width: 600px)
    width 100vw
    height 35vh
    top 0px
    left 0px
    border-radius 0
    .contentUser
      padding 0
      width 50%
      margin auto
      line-height 10vh
.container
  width 80%
  margin auto
  @media screen and (min-width:1000px)
    width 60%
  @media screen and (max-width: 600px)
    width 100%



.jqDropZone
    background lightgrey
    width 100vw
    height 100vh
    position fixed
    line-height 50vh
    text-align center
    font-weight bold
.jqDropZone.in
    line-height 50vh
    font-size larger

.jqDropZone.hover
    background lawngreen

.jqDropZone.fade
    -webkit-transition all 0.3s ease-out
    -moz-transition all 0.3s ease-out
    -ms-transition all 0.3s ease-out
    -o-transition all 0.3s ease-out
    transition all 0.3s ease-out
    opacity 1

a:link
  color hotpink
  text-decoration none



a:visited
  color #00FF00
  text-decoration none



a:hover
  color pink
  text-decoration none



a:active
  color #0000FF
  text-decoration none
